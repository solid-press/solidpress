{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    // "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["./**/*", ],
  "exclude": ["**/node_modules/**", "**/dist/**", "coverage/**", "demos/**", "website/**"]
}
