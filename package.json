{
  "name": "solidpress",
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solid-press/solidpress.git"
  },
  "description": "A static site generating framework based on Vite and solidjs",
  "packageManager": "pnpm@7.9.0",
  "author": "jw-foss",
  "license": "MIT",
  "scripts": {
    "test": "pnpm vitest",
    "dev-node": "DEV=true pnpm run build-node -w",
    "build-node": "rollup --config rollup.config.ts --configPlugin esbuild"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/node/index.js",
      "require": "./dist/node-cjs/index.cjs"
    },
    "./dist/client/*": "./dist/client/*",
    "./client": {
      "types": "./client.d.ts",
      "default": "./dist/client/index.js"
    },
    "./theme": {
      "types": "./theme.d.ts",
      "default": "./dist/client/theme-default/index.js"
    }
  },
  "bin": {
    "solidpress": "bin/solidpress.js"
  },
  "dependencies": {
    "solid-js": "^1.4.8",
    "vite": "^3.0.8"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^2.1.2",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.7.6",
    "@types/ramda": "^0.28.15",
    "debug": "^4.3.4",
    "esbuild": "^0.15.5",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "lru-cache": "^7.14.0",
    "markdown-it": "^13.0.1",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "ramda": "^0.28.0",
    "rollup": "^2.78.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.3",
    "typescript": "^4.7.4",
    "vite-plugin-solid": "^2.3.0",
    "vite-plugin-windicss": "^1.8.7",
    "vitest": "^0.21.1"
  }
}